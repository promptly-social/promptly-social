# Database Configuration
DATABASE_URL=postgresql://username:password@localhost/promptly_social_scribe

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-key

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Application Configuration
APP_NAME="Promptly API"
APP_VERSION=1.0.0
DEBUG=False
ENVIRONMENT=development
BACKEND_URL=http://localhost:8000
FRONTEND_URL=http://localhost:8080

# CORS Configuration
CORS_ORIGINS=http://localhost:8080,http://localhost:8000,https://yourdomain.com

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json


# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# LinkedIn OAuth Configuration
LINKEDIN_CLIENT_ID=your_linkedin_client_id_here
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret_here

# Unipile Configuration (alternative to LinkedIn OAuth)
UNIPILE_DSN=your_unipile_dsn_here
UNIPILE_ACCESS_TOKEN=your_unipile_access_token_here

# Feature Flags
USE_UNIPILE_FOR_LINKEDIN=false

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60 

# Cloud Run
GCP_ANALYSIS_FUNCTION_URL=cloud-run-url
GCP_GENERATE_SUGGESTIONS_FUNCTION_URL=cloud-run-url-2
GCP_SERVICE_ACCOUNT_KEY_PATH=/path/to/your/service-account-key.json

# OpenRouter
OPENROUTER_API_KEY=api-key
OPENROUTER_MODEL_PRIMARY=google/gemini-2.5-flash
OPENROUTER_MODELS_FALLBACK=deepseek/deepseek-chat-v3-0324
OPENROUTER_MODEL_TEMPERATURE=0.0
OPENROUTER_LARGE_MODEL_PRIMARY=google/gemini-2.5-pro
OPENROUTER_LARGE_MODELS_FALLBACK=anthropic/claude-sonnet-4
OPENROUTER_LARGE_MODEL_TEMPERATURE=0.0