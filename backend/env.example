# Database Configuration
DATABASE_URL=postgresql://username:password@localhost/promptly_social_scribe

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-key

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Application Configuration
APP_NAME="Promptly API"
APP_VERSION=1.0.0
DEBUG=False
ENVIRONMENT=production

# CORS Configuration
CORS_ORIGINS=http://localhost:8080,http://localhost:8000,http://localhost:5173,https://yourdomain.com

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json


# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60 

# GCP
GCP_ANALYSIS_FUNCTION_URL=cloud-run-url